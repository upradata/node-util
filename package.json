{
    "name": "@upradata/node-util",
    "author": {
        "name": "Thomas Milotti",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/milottit"
    },
    "repository": {
        "url": "https://github.com/mt-typescript/node-util.git"
    },
    "license": "MIT",
    "version": "1.0.0",
    "description": "",
    "main": "dist",
    "types": "dist-es6",
    "module": "dist-es6",
    "scripts": {
        "clean": "shx rm -rf lib lib-esm",
        "build:watch": "npm run clean && tsc -w",
        "prebuild": "rm -R dist",
        "build": "npm run clean && tsc && tsc -m es6 --outDir lib-esm",
        "postbuild": "yarn test && yarn e2e",
        "test": "npx jest --verbose false --config jest-ut.config.js",
        "e2e": "npx jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "yarn build && npm version patch && git push && git push --tags",
        "npm-publish": "yarn build && npm publish --access public"
    },
    "devDependencies": {
        "@types/node": "^10.5.4",
        "ts-node": "^6.1.1",
        "tslint": "^5.10.0",
        "typescript": "^3.3.3333",
        "@types/jest": "^24.0.9",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.0"
    },
    "dependencies": {
        "colors": "^1.3.3",
        "rxjs": "^6.3.3",
        "ts-util-is": "^1.1.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
