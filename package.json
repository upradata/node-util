{
    "name": "@upradata/node-util",
    "author": {
        "name": "Thomas Milotti (Upra-Data)",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/upradata"
    },
    "repository": {
        "url": "https://github.com/upradata/node-util.git"
    },
    "license": "MIT",
    "version": "14.0.2",
    "description": "Set of typescript util tools working in NodeJs",
    "sideEffects": false,
    "main": "lib",
    "types": "lib-esm",
    "module": "lib-esm",
    "files": [
        "lib",
        "lib-esm"
    ],
    "esm": {
        "mainFields": [
            "module",
            "main"
        ]
    },
    "scripts": {
        "clean": "shx rm -rf lib lib-esm",
        "pre:build": "npm run clean",
        "build-old": "concurrently 'tsc -p tsconfig.lib.json' 'tsc -p tsconfig.lib-esm.json' && pnpm run copy:declaration",
        "build": "concurrently 'tsc -p tsconfig.lib.json' 'tsc -p tsconfig.lib-esm.json'",
        "post:build": "npm run test && npm run e2e",
        "copy:declaration": "cp src/@types/webpack.d.ts lib/@types && cp src/@types/webpack.d.ts lib-esm/@types",
        "watch": "npm run build:watch",
        "build:watch": "concurrently 'tsc -p tsconfig.lib.json -w' 'tsc -p tsconfig.lib-esm.json -w'",
        "test": "jest --verbose false --config jest-ut.config.js",
        "e2e": "jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "npm version patch && git pushall && git pushall-tags",
        "npm-publish": "npm run build && npm publish --access public"
    },
    "dependencies": {
        "colors": "^1.4.0",
        "csvtojson": "^2.0.10",
        "fs-extra": "^10.0.0",
        "glob": "^7.1.7",
        "json5": "^2.2.0",
        "locate-path": "^7.0.0",
        "table": "^6.7.1",
        "tsconfig": "^7.0.0",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.2",
        "vinyl": "^2.2.1",
        "yargs": "^17.1.1",
        "yargs-parser": "^20.2.9"
    },
    "devDependencies": {
        "@schemastore/package": "^0.0.6",
        "@types/memory-fs": "^0.3.3",
        "@types/fs-extra": "^9.0.12",
        "@types/glob": "^7.1.4",
        "@types/jest": "^27.0.1",
        "@types/vinyl": "^2.0.5",
        "@types/yargs": "^17.0.2",
        "@types/yargs-parser": "^20.2.1",
        "concurrently": "^6.2.1",
        "jest": "^27.1.0",
        "jest-environment-node": "^27.1.0",
        "memory-fs": "^0.5.0",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1"
    },
    "publishConfig": {
        "access": "public"
    },
    "local": {
        "usedBy": {
            "html-index-webpack-extended": "/home/milottit/Libraries/WebpackAngular/IndexHtmlPlugin",
            "@upradata/npx-local": "/home/milottit/Libraries/Upra-Data/npx-local",
            "@upradata/express": "/home/milottit/Libraries/Upra-Data/express",
            "@upradata/stream": "/home/milottit/Libraries/Upra-Data/stream",
            "@upradata/puppeteer": "/home/milottit/Libraries/Upra-Data/puppeteer"
        },
        "dependencies": {
            "@upradata/util": "link:/home/milottit/Libraries/Upra-Data/util@13.0.1"
        }
    }
}
