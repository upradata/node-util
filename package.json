{
    "name": "@upradata/node-util",
    "author": {
        "name": "Thomas Milotti",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/milottit"
    },
    "repository": {
        "url": "https://github.com/mt-typescript/node-util.git"
    },
    "license": "MIT",
    "version": "2.0.1",
    "description": "",
    "main": "dist",
    "types": "lib-esm",
    "module": "lib-esm",
    "scripts": {
        "clean": "shx rm -rf dist lib-esm",
        "build:watch": "npm run clean && tsc -w",
        "prebuild": "yarn clean",
        "build": "yarn run clean && tsc && tsc -m es6 --outDir lib-esm",
        "postbuild": "yarn test && yarn e2e",
        "test": "npx jest --verbose false --config jest-ut.config.js",
        "e2e": "npx jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "yarn build && npm version patch && git push && git push --tags",
        "npm-publish": "yarn build && npm publish --access public"
    },
    "files": [
        "dist",
        "lib-esm"
    ],
    "devDependencies": {
        "@types/jest": "^24.0.9",
        "@types/node": "^12.7.1",
        "jest": "^24.8.0",
        "shx": "^0.3.2",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.10.0",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "colors": "^1.3.3",
        "rxjs": "^6.3.3",
        "ts-util-is": "^1.1.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
