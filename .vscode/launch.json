{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "Test WebpackConfig TS mode File",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/webpack.config.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "Test WebpackConfig ESM mode File",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Tsc Watch",
            "args": [
                "${workspaceFolder}/test/webpack.config.js"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "esm",
                "-r",
                "${workspaceFolder}/test/require-boot.js"
            ],
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test WebpackConfig JS mode File",
            "preLaunchTask": "Tsc Watch",
            "program": "${workspaceFolder}/test/src/webpack.config.js",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "cwd": "${workspaceFolder}/test",
            "runtimeArgs": [
                "--nolazy"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test",
            "preLaunchTask": "Tsc Watch",
            "program": "${workspaceFolder}/test/webpack.config.js",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "esm",
                "-r",
                "tsconfig-paths/register"
            ],
            "timeout": 1000
        },
        {
            "name": "Launch in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3145",
            //"debugServer": 4712,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/bundles",
            //"runtimeArgs": ["--auto-open-devtools-for-tabs"],
            "disableNetworkCache": true,
            "preLaunchTask": "Npm Watch",
            "showAsyncStacks": true,
            "timeout": 2000
        }
    ]
}
