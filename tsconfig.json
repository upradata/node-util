{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "dom"],
    "module": "umd",
    "moduleResolution": "node",
    "sourceMap": true,
    // "target": "es2015",
    // "target": "es5",
    "target": "ESNext",
    "traceResolution": false,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.example.ts", "src/**/*.spec.ts"]
}
